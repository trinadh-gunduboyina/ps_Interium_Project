@page "{id:int?}"
@model InterimProject.Pages.Admin.SaveModel
@{
    Layout = "_AdminLayout";
}

<p>&nbsp;</p>
<div class="row">
    <div class="col-md-6 mx-auto text-center mb-5 section-heading">
    <a><h2>Details of Menu Items</h2></a>
</div>
</div>

<div class="row">
    <div class="col-12">
        <nav aria-label="breadcrum">
            <ol class="breadcrum">
                <li class="breadcrum-item"><a asp-page ="/Admin/Index">Home</a></li>
                <li class="breadcrum-item"><a asp-page ="/Admin/Menus">Menu</a></li>
                <li class="breadcrum-item active" aria-current="page">Save</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row">
    <p>&nbsp;</p>
</div>

<div class="row">
    <form method="post" class="mb-3" enctype="multipart/form-data">
        <input hidden asp-for="Menu.ItemId"  />

        <div class="row">

            <label asp-for="Menu.ItemName" class="col-2 col-form-label"></label>
            <div class="col-6">
                <input asp-for="Menu.ItemName"
                    class="form-control" placeholder="Enter Food Item Name" />
           
            </div>
             <span asp-validation-for="Menu.ItemName" class="col-4 text-danger"></span>
        </div>

        <p>&nbsp;</p>

        @*Menu Items Categories*@
         <div class="row">
            <label asp-for="Menu.Category" class="col-2 col-form-label"></label>
            <div class="col-6">
                <select class="form-select" asp-for="Menu.CategoryId">
                    @foreach (var category in @Model.Categories)
                    {
                       <option value=@category.Id>@category.CategoryName</option> 
                    }
                </select>
            </div>
        </div>


        
        <p>&nbsp;</p>

        <div class="row">

            <label asp-for="Menu.ItemCost" class="col-2 col-form-label"></label>
            <div class="col-6">
                <input asp-for="Menu.ItemCost"
                    class="form-control" placeholder="Enter Item Cost" />
             
            </div>
             <span asp-validation-for="Menu.ItemCost" class="col-4 text-danger"></span> 
        </div>

        <p>&nbsp;</p>

        <div class="row">

            <label asp-for="Menu.ItemDiscount" class="col-2 col-form-label"></label>
            <div class="col-6">
                <input asp-for="Menu.ItemDiscount"
                    class="form-control" placeholder="Enter Item Discount" />
           
            </div>
              <span asp-validation-for="Menu.ItemDiscount" class="col-4 text-danger"></span>  
        </div>

        <p>&nbsp;</p>

        <div class="row">
            <div class="col-6 offset-2">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-page="/Admin/Menus" class="btn btn-warning">Cancel</a>
            </div>
        </div>


    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial.cshtml" />
}